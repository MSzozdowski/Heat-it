<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/scanButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="265dp"
        android:text="@string/Scan" />

    <ListView
        android:id="@+id/scanListView"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="190dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="64dp"
        android:theme="@style/AppTheme" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="163dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="124dp"
        android:text="@string/Status"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dataReceivedTextView"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="195dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="118dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="235dp"
        android:text="@string/Start" />

    <EditText
        android:id="@+id/inputTemperatureEditText"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="72dp"
        android:hint="@string/Input_the_temperature"
        android:inputType="number"
        android:selectAllOnFocus="false" />


    <Button
        android:id="@+id/stopButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="239dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="28dp"
        android:text="@string/Stop" />

    <SeekBar
        android:id="@+id/keepHeatingSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="48dp" />

    <TextView
        android:id="@+id/seekBarValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="152dp"
        android:text="0 min"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/ActualTemperatureTextView"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="186dp"
        android:text="Actual Temperature "
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/CelsiusDegreesTextView"
        android:layout_width="98dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="241dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="71dp"
        android:text="Â°C"
        android:textSize="20dp" />


    <!--android:visibility="invisible"
    tools:visibility="visible" -->
</RelativeLayout>