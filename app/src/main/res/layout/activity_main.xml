<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/scanButton"
        android:layout_width="113dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="286dp"
        android:background="@drawable/bluetooth_search" />

    <ListView
        android:id="@+id/scanListView"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="190dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="64dp"
        android:theme="@style/AppTheme" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="163dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="88dp"
        android:text="@string/Status"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dataReceivedTextView"
        android:layout_width="159dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="123dp"
        android:textSize="40sp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="172dp"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="194dp"
        android:text="@string/Start"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/inputTemperatureEditText"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="71dp"
        android:hint="@string/Input_the_temperature"
        android:inputType="number"
        android:selectAllOnFocus="false" />


    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="49dp"
        android:text="@string/Stop"
        android:textSize="25sp" />

    <SeekBar
        android:id="@+id/keepHeatingSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="43dp"
        android:thumb="@drawable/hand" />

    <TextView
        android:id="@+id/seekBarValueTextView"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="307dp"
        android:layout_marginEnd="131dp"
        android:text="0 min"
        android:textAlignment="center"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="65dp"
        app:srcCompat="@drawable/thermometer" />

    <TextView
        android:id="@+id/heaterStatus"
        android:layout_width="204dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="105dp"
        android:text="Idle"
        android:textAlignment="center"
        android:textSize="20sp" />


    <!--android:visibility="invisible"
    tools:visibility="visible"
    android:background="@drawable/power_off"
    android:background="@drawable/power_off1"
    -->
</RelativeLayout>